'NOTES:
'1. Reads the value of a specific attribute by name

'DEPENDENCIES:
'1. VBA-Library/RunPowershell

Public Function ADSReadAttribute(FilePath As String, AttributeName As String) As String
    Dim syntax As String
    Dim Retval As Collection
    
    syntax = "Get-Content -Path '" & FilePath & "' -Stream '" & AttributeName & "'"
    Set Retval = RunPowershell(syntax)
    
    If Retval.Count > 0 Then
        ADSReadAttribute = Retval(1)
    End If
End Function
